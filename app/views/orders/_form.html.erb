<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= t("activerecord.errors.template.header", count: @order.errors.size, 
                model: t("activerecord.models.order")) %></h2>
      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= raw message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address, t(".address") %>
    <%= f.text_area :address, rows: 1, cols: 40 %>
  </div>
  <div class="field">
    <%= f.label :email, t(".email") %>
    <%= f.text_field :email, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :pay_type, t(".pay_type") %>
    <%= f.select :pay_type, PayType.types_names, prompt: t('.pay_prompt') %>
  </div>
  <div class="actions">
    <%= f.submit t(".submit") %>
  </div>
<% end %>
